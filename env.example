# Email Configuration
# Choose one email provider: 'sendgrid', 'aws-ses', or 'development'
EMAIL_PROVIDER=development

# Required for all providers
EMAIL_FROM=noreply@your-domain.com
EMAIL_FROM_NAME=Peabody Lesson Builder

# SendGrid Configuration (if using EMAIL_PROVIDER=sendgrid)
SENDGRID_API_KEY=your_sendgrid_api_key_here

# AWS SES Configuration (if using EMAIL_PROVIDER=aws-ses)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here

# Application URLs
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Rate Limiting Configuration
RATE_LIMIT_PASSWORD_RESET_REQUESTS_PER_EMAIL=3
RATE_LIMIT_PASSWORD_RESET_WINDOW_MINUTES=60
RATE_LIMIT_PASSWORD_RESET_REQUESTS_PER_IP=10

# Existing environment variables (keep your current ones)
# SUPABASE_URL=your_supabase_url
# SUPABASE_ANON_KEY=your_supabase_anon_key
# STRIPE_SECRET_KEY=your_stripe_secret_key
# etc...